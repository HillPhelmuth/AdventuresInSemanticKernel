                   <RadzenTemplateForm Data="_selectAgentForm" TItem="SelectAgentForm" Submit="SelectAgent">
                       <RadzenFormField Text="Select Admin">
                           <RadzenRadioButtonList Data="_agentProxies" Orientation="Radzen.Orientation.Vertical" @bind-Value=_selectAgentForm.AdminAgent TextProperty="Name"></RadzenRadioButtonList>
                       </RadzenFormField><br />
                       <RadzenButton Size=ButtonSize.Small ButtonType="ButtonType.Submit" Text="Select Admin"></RadzenButton>
                   </RadzenTemplateForm>
                   <RadzenButton Click="UseLast" Text="Use Last"></RadzenButton>
                </RadzenColumn>
            </RadzenRow> *@
        </RadzenStepsItem>
        <RadzenStepsItem Text="Execute Agent">
            <RadzenButton Text="Reset" Size="ButtonSize.ExtraSmall" Click="Reset"></RadzenButton>
            <RadzenButton Text="Download" Size="ButtonSize.ExtraSmall" Click="DownloadToFile"></RadzenButton>
            <RadzenCard>
                <ChatView @ref=_chatView ViewId="simpleagentchat"></ChatView>
            </RadzenCard>
            <UserInput UserInputSubmit="HandleUserInput" ButtonLabel="Send" HelperText="User Input" IsBusy=_isBusy CancelRequest="Cancel"></UserInput>
        </RadzenStepsItem>
    </Steps>
</RadzenSteps>