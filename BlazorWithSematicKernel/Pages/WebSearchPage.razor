@page "/web"
<RadzenRow>
    @* <RadzenColumn Size="2"></RadzenColumn> *@
    <RadzenColumn Size="12">
        <RadzenText Text="Web Chat" TextStyle="TextStyle.DisplayH6" TextAlign="TextAlign.Center"></RadzenText>
        <RadzenCard>
            <ChatView ViewId="webChat" ResetOnClose="false" @ref=_chatView></ChatView>
        </RadzenCard>
        <RadzenCard Style="width: 100%">
            <UserInput ButtonLabel="Send" HelperText="Query" DefaultInput="Tell me about today's news on the latest AI developments" MessageSubmit="Submit" IsBusy="_isBusy"></UserInput>
        </RadzenCard>

    </RadzenColumn>
    <RadzenColumn Size="2"></RadzenColumn>
</RadzenRow>

